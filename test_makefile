NAME = libftprintf.a

SRC = ft_printf.c ft_printf_utils.c test_printf.c

OBJS := $(SRC:%.c=%.o)

CC = cc

CFLAGS = -Wall -Wextra -Werror

AR = ar crs

RM = rm -f

all: $(NAME)

$(NAME): $(OBJS)
	$(AR) $(NAME) $(OBJS)

%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: clean
